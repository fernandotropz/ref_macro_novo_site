
$(document).ready(function() {
$(".aparecerBtn").hide();
	$(function () {
      	$(window).scroll(function () {
          if ($(this).scrollTop() > 300) {
                  $('.aparecerBtn').fadeIn();
          } else {
              $('.aparecerBtn').fadeOut();
          }
      	});
    	$('.aparecerBtn').click(function() {
          $('body,html').animate({scrollTop:0},600);
    	});
	});
});   

